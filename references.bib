	Number = {3},
	Pages = {433-453},
	Title = {Retrieval of Model Initial Fields from Single-{D}oppler Observations of a Supercell Thunderstorm. Part {I}: Single-Doppler Velocity Retrieval},
	Ty = {JOUR},
	Volume = {130},
	Year = {2002}}

